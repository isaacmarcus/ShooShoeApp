<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/recListItemCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardElevation="0dp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/recRLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp">

            <ImageView
                android:id="@+id/recImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/recDeployButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/recImageView"
                android:layout_alignLeft="@id/recImageView"
                android:layout_marginVertical="5dp"
                android:background="@null"
                app:fontFamily="@font/samsungone400"
                android:text="DEPLOY"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorPrimary"
                android:layout_alignStart="@id/recImageView" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>